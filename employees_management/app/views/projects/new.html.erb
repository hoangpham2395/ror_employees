<ol class="breadcrumb">
	<li class="breadcrumb-item"><a href="#"><i class="fa fa-home"></i> Home</a></li>
	<li class="breadcrumb-item"><a href="#"><i class="fa fa-user"></i> Projects manage</a></li>
	<li class="breadcrumb-item active"><span style="color: red;">Add new project</span></li>
</ol>

<div class="panel panel-info">
	<div class="panel-heading">Add new project</div>
	<div class="panel-body">
		<%= form_for :project, url: projects_path do |f| %>
			<!-- Display errors -->
			<% if @project.errors.any? %>
				<div class="row">
					<div class="col-md-12">
						<div class="alert alert-danger">
							<% @project.errors.full_messages.each do |msg| %>
									&#9679; <%= msg %> <br>
							<% end %>
						</div>
					</div>
				</div>
			<% end %>

			<div class="row">
				<div class="form-group col-md-12">
					<%= f.label :project_name, 'Project name: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %>
					<%= f.text_field :project_name, :class => "form-control", :placeholder => "Project name" %>
				</div>
			</div>

			<div class="row">
				<div class="form-group col-md-6">
					<%= f.label :project_status, 'Project Status: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %>
					<%= f.select :project_status, [['--- Select status ---', ''], 'Running', 'Maintenance', 'Received', 'Closed'], {}, :class => "form-control" %>
				</div>
				<div class="form-group col-md-6">
					<%= f.label :project_lang, 'Language development: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %>
					<%= f.text_field :project_lang, :class => "form-control", :placeholder => "Project language" %>
				</div>
			</div>

			<div class="row">
				<div class="form-group col-md-12">
					<%= f.label :start_datetime, 'Start datetime: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %>
					<%= f.date_field :start_datetime, :class => "form-control" %>
				</div>

				<!-- <div class="form-group col-md-6">
					<%= f.label :end_datetime, 'Ngày kết thúc:' %>
					<%= f.date_field :end_datetime, :class => "form-control" %>
				</div> -->
			</div>

			<div class="row">
				<div class="form-group col-md-12">
					<%= f.label :description, 'Description:' %>
					<%= f.text_area :description, :rows => 8, :class => "form-control", :placeholder => "Description" %>
				</div>
			</div>

			<%= f.hidden_field :del_flag, value: 0 %>

			<div class="row">
				<div class="form-group text-center">
					<%= f.submit 'Save', class: 'btn btn-danger' %>
					<%= submit_tag('Reset', {:name => 'reset', :type => 'reset', :id => 'reset_new_project', :class => 'btn btn-default'}) %>
				</div>
			</div>
		<% end %>
	</div>
</div>

