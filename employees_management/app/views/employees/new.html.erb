<ol class="breadcrumb">
	<li class="breadcrumb-item"><a href="#"><i class="fa fa-home"></i> Home</a></li>
	<li class="breadcrumb-item"><a href="#"><i class="fa fa-user"></i> Employees manage</a></li>
	<li class="breadcrumb-item active"><span style="color: red;">Add new employee</span></li>
</ol>
<div class="panel panel-info">
	<div class="panel-heading">Add new employee</div>
	<div class="panel-body">
		<%= form_for :employee, url: employees_path, html: { mutipart: true } do |f| %>
			<!-- Display errors -->
			<% if @employee.errors.any? %>
				<div class="row">
					<div class="col-md-12">
						<div class="alert alert-danger">
							<% @employee.errors.full_messages.each do |msg| %>
									&#9679; <%= msg %> <br>
							<% end %>
						</div>
					</div>
				</div>
			<% end %>

			<div class="row">
				<div class="form-group col-md-6">
					<%= f.label :username, 'Username: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %>
					<%= f.text_field :username, :class => "form-control", :placeholder => "Username" %>
				</div>

				<div class="form-group col-md-6">
					<%= f.label :fullname, 'Fullname: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %>
					<%= f.text_field :fullname, :class => "form-control", :placeholder => "Fullname" %>
				</div>
			</div>
			
			<div class="row">
				<div class="form-group col-md-6">
					<%= f.label :email_company, 'Email company: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %>
					<%= f.email_field :email_company, :class => "form-control", :placeholder => "Email company" %>
				</div>

				<div class="form-group col-md-6">
					<%= f.label :email_personal, 'Email personal: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %>
					<%= f.email_field :email_personal, :class => "form-control", :placeholder => "Email personal" %>
				</div>
			</div>
			
			<div class="row">
				<div class="form-group col-md-6">
					<%= f.label :tel, "Telephone number:" %>
					<%= f.telephone_field :tel, :class => "form-control", :placeholder => "Tel" %>
				</div>

				<div class="form-group col-md-6">
					<%= f.label :gender, 'Gender: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %> <br>
					<%= f.radio_button :gender, "1" %> Male
					<%= f.radio_button :gender, "2" %> Female
				</div>
			</div>
			
			<div class="row">
				<div class="form-group col-md-12">
					<%= f.label :birthday, 'Birthday: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %>
					<%= f.date_field :birthday, :class => "form-control", :placeholder => "Birthday" %>
				</div>

				<!-- <div class="form-group col-md-6">
					<%= f.label :image, "Avatar:" %>
					<%= f.file_field :image, :class => "form-control", :placeholder => "Image" %>
				</div> -->
			</div>

			<div class="row">
				<div class="form-group col-md-6">
					<%= f.label :department, 'Department: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %>
					<%= f.select :department, [['--- Select department ---', ''], 'App', 'Web', 'Difference'],{}, {:class => "form-control"} %>
				</div>

				<div class="form-group col-md-6">
					<%= f.label :position, 'Position: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %>
					<%= f.select :position, [['--- Select position ---', ''], 'Director', 'Employee', 'Tester', 'Leader'], {}, {:class => 'form-control'} %>
				</div>
			</div>

			<div class="row">
				<div class="form-group col-md-6">
					<%= f.label :skill, "Skill:" %>
					<%= f.text_field :skill, :class => "form-control", :placeholder => "Skill" %>
				</div>

				<div class="form-group col-md-6">
					<%= f.label :literacy, "Literacy:" %>
					<%= f.text_field :literacy, :class => "form-control", :placeholder => "Literacy" %>
				</div>
			</div>

			<div class="row">
				<div class="form-group col-md-6">
					<%= f.label :contract_type, 'Contract type: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %>
					<%= f.select :contract_type, [['--- Select contract type ---', ''], '3 months', '6 months', '1 year', '2 years', '3 years', '5 years', 'Duration', 'Forever'], {}, {:class => "form-control"} %>
				</div>

				<div class="form-group col-md-6">
					<%= f.label :status, 'Status: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %>
					<%= f.select :status, [['--- Select status ---', ''], 'Joining', 'Exited', 'Absent'], {}, {:class => "form-control"} %>
				</div>
			</div>

			<div class="row">
				<div class="form-group col-md-6">
					<%= f.label :user_type, 'Employee type: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %>
					<%= f.select :user_type, [['--- Select user type ---', ''], 'Offical', 'Internship', 'Probationary', 'Contract', 'Difference'], {}, {:class => "form-control"} %>
				</div>

				<div class="form-group col-md-6">
					<%= f.label :join_datetime, 'Join Datetime: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %>
					<%= f.date_field :join_datetime, :class => "form-control", :placeholder => "Join datetime" %>
				</div>
			</div>

			<div class="row">
				<div class="form-group col-md-12">
					<%= f.label :address, "Address:" %>
					<%= f.text_field :address, :class => "form-control", :placeholder => "Address" %>
				</div>
			</div>

			<div class="row">
				<div class="form-group col-md-6">
					<%= f.label :bank_account, "Bank account:" %>
					<%= f.text_field :bank_account, :class => "form-control", :placeholder => "Bank account" %>
				</div>

				<div class="form-group col-md-6">
					<%= f.label :id_number, 'ID number: <span style="color:red;"><b>[<i class="fa fa-asterisk"></i>]</b></span>'.html_safe %>
					<%= f.text_field :id_number, :class => "form-control", :placeholder => "Id number" %>
				</div>
			</div>

			<div class="row">
				<div class="form-group col-md-12">
					<%= f.label :description, "Description:" %>
					<%= f.text_area :description, :class => "form-control", :placeholder => "Description", rows: 10 %>
				</div>
			</div>

			<%= f.hidden_field :del_flag, :value => '0' %>

			<div class="row">
				<div class="form-group text-center">
					<%= f.submit "Save", class: "btn btn-danger" %>
					<%= link_to "Cancel", new_employee_path, :class => "btn btn-default" %>
				</div>
			</div>
		<% end %>
	</div>
</div>